<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/text_dialog_title"
        android:textColor="#777a7f"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:lineSpacingExtra="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/colorDialogContent"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="#d0d0d0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_left_btn_selector"
            android:text="@string/text_dialog_cancel"
            android:textColor="#777a7f"
            android:textSize="16sp"/>

        <View
            android:id="@+id/view_line"
            android:layout_width="0.5px"
            android:layout_height="match_parent"
            android:background="#d0d0d0" />

        <Button
            android:id="@+id/dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_right_btn_selector"
            android:text="@string/text_dialog_sure"
            android:textColor="@color/colorBtnNormal"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>